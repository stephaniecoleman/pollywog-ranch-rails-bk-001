<h1>Edit <%= @tadpole.name %></h1>
<form action="/tadpoles/<%= @tadpole.id %>/update" method="post">
  <label for="name">Name</label>
  <input type="text" id="name" name="tadpole[name]" placeholder="<%= @tadpole.name %>">
  <label for="color">Color</label>
  <input type="text" id="color" name="tadpole[color]" placeholder="<%= @tadpole.color %>">
  <input type="submit" value="update">
</form><br>
<a href="/tadpoles">Cancel</a>